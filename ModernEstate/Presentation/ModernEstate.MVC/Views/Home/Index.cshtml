<style>
	.notification {
		display: none;
		position: fixed;
		top: 20px;
		right: 20px;
		z-index: 1000;
		padding: 15px 25px;
		border-radius: 10px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
		font-weight: bold;
		font-size: 16px;
		opacity: 1;
		transition: opacity 1s ease-in-out, transform 0.5s ease-in-out;
		transform: translateX(100%);
		background-color: #28a745; /* Yaşıl fon */
		color: white; /* Ağ yazı */
		border-left: 6px solid #155724; /* Tünd yaşıl border */
	}

	.show {
		transform: translateX(0);
	}

	.fade-out {
		opacity: 0;
	}
</style>

<div id="notification" class="notification">
	<span id="notificationMessage"></span>
</div>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		var message = "@TempData["SuccessMessage"]";

		if (message) {
			showNotification(message);
		}
	});

	function showNotification(message) {
		var notification = document.getElementById("notification");
		var messageSpan = document.getElementById("notificationMessage");

		messageSpan.textContent = message;
		notification.className = "notification show";
		notification.style.display = "block";

		setTimeout(function () {
			notification.classList.add("fade-out");
			setTimeout(function () {
				notification.style.display = "none";
				notification.classList.remove("fade-out", "show");
			}, 1000); // 1 saniyəyə tam itəcək
		}, 5000); // 5 saniyə qalsın, sonra yavaş-yavaş yox olsun
	}
</script>


