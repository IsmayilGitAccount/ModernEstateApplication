@model ModernEstate.Domain.Entities.Author
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-lg mb-4 p-4 border-light">

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="fw-semibold" style="color: #000;">Author Photo:</h6>
                        <a href="~/assets/images/@Model.Photo" target="_blank" title="View full-size photo">
                            <img src="~/assets/images/@Model.Photo" class="img-fluid rounded shadow-lg agent-photo" alt="Agent Photo" />
                        </a>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="fw-semibold" style="color: #000;">Author Name:</h6>
                        <p style="color: #000;">@Model.AuthorName</p>
                    </div>
                <div class="d-flex justify-content-start">
                    <a asp-action="Index" class="btn btn-outline-dark m-1">Return</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .agent-photo {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            transition: transform 0.3s ease-in-out;
        }

            .agent-photo:hover {
                transform: scale(1.1);
            }

        .btn-outline-dark {
            transition: all 0.3s ease-in-out;
        }

            .btn-outline-dark:hover {
                background-color: #343a40;
                color: white;
            }
    </style>
}
