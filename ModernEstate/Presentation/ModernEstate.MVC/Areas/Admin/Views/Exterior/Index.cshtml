@using ModernEstate.Application.ViewModels.AdminPaginations
@using ModernEstate.MVC.Areas.Admin.ViewModels.Exteriors
@model PaginationVM<GetAdminExteriorVM>
@{
	int count = (Model.CurrentPage - 1) * 3;
}
<div class="col-lg-12 d-flex align-items-stretch">
	<!-- Col-lg-8 dəyərini 12 olaraq dəyişdirin -->
	@if(User.IsInRole("Agent"))
	{
		<div class="card w-100">
			<div class="card-body p-4" style="width: 1000px; height: 800px;">
				<!-- Burada eni artırılıb -->
				<h5 class="card-title fw-semibold mb-4">Recent Transactions</h5>
				<div>
					<a asp-action="Create" class="btn btn-outline-success m-1">Add Exterior</a>

					<table class="table text-nowrap mb-0 align-middle">
						<thead class="text-dark fs-4">
							<tr>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">No</h6>
								</th>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">Exterior Type</h6>
								</th>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">Settings</h6>
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (GetAdminExteriorVM exteriorVM in Model.Items)
							{
								count++;
								<tr>
									<td class="border-bottom-0"><h6 class="fw-semibold mb-0">@count</h6></td>

									<td class="border-bottom-0">
										<p class="mb-0 fw-normal">@exteriorVM.ExteriorName</p>
									</td>
									<td class="border-bottom-0">
										<a asp-action="Update" asp-route-Id="@exteriorVM.Id" class="btn btn-outline-warning m-1">Update</a>
										<a asp-action="Delete" asp-route-Id="@exteriorVM.Id" class="btn btn-outline-danger m-1">Delete</a>
										<a asp-action="Details" asp-route-Id="@exteriorVM.Id" class="btn btn-outline-info m-1">More</a>
									</td>
								</tr>
							}
						</tbody>
					</table>

					<div class="block-27">
						<ul>
							@if (Model.CurrentPage <= 1)
							{
								<li class="@(Model.CurrentPage<=1?"":"active")"><a>&lt;</a></li>
							}
							else
							{
								<li class="@(Model.CurrentPage<=1?"":"active")">
									<a asp-action="Index" asp-route-page="@(Model.CurrentPage-1)">&lt;</a>
								</li>

							}
							@for (int i = 1; i <= Model.TotalPage; i++)
							{
								<li class="@(Model.CurrentPage==i?"active":"")"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
							}
							@if (Model.CurrentPage == Model.TotalPage)
							{
								<li class="@(Model.CurrentPage==Model.TotalPage?"":"active")">
									<a>&gt;</a>
								</li>
							}
							else
							{
								<li class="@(Model.CurrentPage==Model.TotalPage?"":"active")">
									<a asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">&gt;</a>
								</li>
							}

						</ul>
					</div>

					<style>
						.block-27 ul {
							display: flex;
							gap: 5px;
							list-style: none;
							padding: 0;
						}

							.block-27 ul li.active a,
							.block-27 ul li.active span {
								background: #4ba1fa;
								color: #fff;
								border: 1px solid transparent;
							}

							.block-27 ul li a,
							.block-27 ul li span {
								color: gray;
								text-align: center;
								display: inline-block;
								width: 40px;
								height: 40px;
								line-height: 40px;
								border-radius: 50%;
								border: 1px solid #e6e6e6;
								text-decoration: none;
							}
					</style>
				</div>
			</div>
		</div>

	}
	else if(User.IsInRole("Admin"))
	{
		<div class="card w-100">
			<div class="card-body p-4" style="width: 1000px; height: 800px;">
				<!-- Burada eni artırılıb -->
