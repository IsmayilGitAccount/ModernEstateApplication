@model ModernEstate.Domain.Entities.Parking
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-lg mb-4 p-4 border-light">
                <h5 class="fw-semibold" style="font-size: 2rem; color: #000;">Parking Details</h5>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <p style="color: #000;">@Model.ParkingType</p>
                    </div>
                </div>

                <div class="d-flex justify-content-start">
                    <a asp-action="Index" class="btn btn-outline-dark m-1">Return</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .btn-outline-dark {
            transition: all 0.3s ease-in-out;
        }

            .btn-outline-dark:hover {
                background-color: #343a40;
                color: white;
            }
    </style>
}
