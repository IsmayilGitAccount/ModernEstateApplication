@model ModernEstate.Domain.Entities.Category
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-lg mb-4 p-4 border-light">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="fw-semibold" style="color: #000;">Category Photo:</h6>
                        <a href="~/assets/images/@Model.CategoryPhoto" target="_blank">
                            <img src="~/assets/images/@Model.CategoryPhoto" class="img-fluid rounded shadow-lg category-photo" alt="Category Photo" />

                        </a>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <h6 class="fw-semibold" style="color: #000;">Category Name:</h6>
                        <p style="color: #000;">@Model.CategoryName</p>
                    </div>
                </div>

                <div class="d-flex justify-content-start">
                    <a asp-action="Index" class="btn btn-outline-dark m-1">Return</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .category-photo {
            width: 200px; 
            height: 200px;
            object-fit: cover;
            border-radius: 50%;
            transition: transform 0.3s ease-in-out;
        }

            .category-photo:hover {
                transform: scale(1.1);
            }

        .btn-outline-primary {
            transition: all 0.3s ease-in-out;
        }

            .btn-outline-primary:hover {
                background-color: #007bff;
                color: white;
            }
    </style>
}
