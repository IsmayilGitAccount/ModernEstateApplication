@using ModernEstate.MVC.Areas.Admin.ViewModels.Posts
@model List<GetAgentServiceVM>
@{
	int count = 0;
}
<div class="col-lg-12 d-flex align-items-stretch">
	<div class="card w-100">
		<div class="card-body p-4" style="width: 1000px; height: 800px;">
			<h5 class="card-title fw-semibold mb-4">Recent Transactions</h5>
			@if(User.IsInRole("Author"))
			{
				<div>
					<a asp-action="Create" class="btn btn-outline-success m-1">Add Post</a>

					<table class="table text-nowrap mb-0 align-middle">
						<thead class="text-dark fs-4">
							<tr>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">No</h6>
								</th>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">Photo</h6>
								</th>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">Title</h6>
								</th>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">Posted by</h6>
								</th>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">Settings</h6>
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (GetAgentServiceVM postVM in Model)
							{
								count++;
								<tr>
									<td class="border-bottom-0"><h6 class="fw-semibold mb-0">@count</h6></td>
									<td class="border-bottom-0">
										<img src="~/assets/images/@postVM.Photo" style="width:50px;height:50px;border-radius:50%;transition:transform 0.3s;"
											 onmouseover="this.style.transform='scale(1.5)';"
											 onmouseout="this.style.transform='scale(1)';"
											 onclick="this.style.transform='scale(2)';" />
									</td>
									<td class="border-bottom-0">
										<p class="mb-0 fw-normal">@postVM.Title</p>
									</td>
									<td class="border-bottom-0">
										<p class="mb-0 fw-normal">@postVM.PostedBy</p>
									</td>
									<td class="border-bottom-0">
										<a asp-action="Update" asp-route-Id="@postVM.Id" class="btn btn-outline-warning m-1">Update</a>
										<a asp-action="Delete" asp-route-Id="@postVM.Id" class="btn btn-outline-danger m-1">Delete</a>
										<a asp-action="Details" asp-route-Id="@postVM.Id" class="btn btn-outline-info m-1">More</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			}
			else if(User.IsInRole("Admin"))
			{
				<div>
					<table class="table text-nowrap mb-0 align-middle">
						<thead class="text-dark fs-4">
							<tr>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">No</h6>
								</th>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">Photo</h6>
								</th>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">Title</h6>
								</th>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">Posted by</h6>
								</th>
								<th class="border-bottom-0">
									<h6 class="fw-semibold mb-0">Settings</h6>
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (GetAgentServiceVM postVM in Model)
							{
								count++;
								<tr>
									<td class="border-bottom-0"><h6 class="fw-semibold mb-0">@count</h6></td>
									<td class="border-bottom-0">
										<img src="~/assets/images/@postVM.Photo" style="width:50px;height:50px;border-radius:50%;transition:transform 0.3s;"
											 onmouseover="this.style.transform='scale(1.5)';"
											 onmouseout="this.style.transform='scale(1)';"
											 onclick="this.style.transform='scale(2)';" />
									</td>
									<td class="border-bottom-0">
										<p class="mb-0 fw-normal">@postVM.Title</p>
									</td>
									<td class="border-bottom-0">
										<p class="mb-0 fw-normal">@postVM.PostedBy</p>
									</td>
									<td class="border-bottom-0">
										<a asp-action="Details" asp-route-Id="@postVM.Id" class="btn btn-outline-info m-1">More</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			}
		</div>
	</div>
</div>

