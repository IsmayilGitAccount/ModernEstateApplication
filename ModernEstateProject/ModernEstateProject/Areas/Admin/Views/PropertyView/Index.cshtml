@using ModernEstateProject.Areas.Admin.ViewModels.Views
@model List<GetAdminViewVM>
@{
    int count = 0;
}
<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4" style="width: 1000px; height: 800px;">
            <h5 class="card-title fw-semibold mb-4">Recent Transactions</h5>
            <div>
                <a asp-action="Create" class="btn btn-outline-success m-1">Add View</a>

                <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">No</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">View Type</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Settings</h6>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetAdminViewVM viewVM in Model)
                        {
                            count++;
                                <tr>
                                    <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@count</h6></td>

                                    <td class="border-bottom-0">
                                        <p class="mb-0 fw-normal">@viewVM.ViewType</p>
                                    </td>
                                    <td class="border-bottom-0">
                                        <a asp-action="Update" asp-route-Id="@viewVM.Id" class="btn btn-outline-warning m-1">Update</a>
                                        <a asp-action="Delete" asp-route-Id="@viewVM.Id" class="btn btn-outline-danger m-1">Delete</a>
                                        <a asp-action="Details" asp-route-Id="@viewVM.Id" class="btn btn-outline-info m-1">More</a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
