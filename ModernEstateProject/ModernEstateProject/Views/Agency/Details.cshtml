@using ModernEstateProject.ViewModels.Agencies
@model AgencyVM

<section class="section-full text-left">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>@Model.Agency.AgencyName</h1>
                <p></p>
                <ol class="breadcrumb">
                    <li>
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a href="#">Pages</a>
                    </li>
                    <li class="active">Agency Page</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!--Section About us-->
<section class="section-md text-left">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <h2>A Few Words About Us</h2>
                <hr>
                <p class="inset-3">
                   @Model.Agency.Description
                </p>
            </div>
        </div>
    </div>
</section>
<!--Section Our Achievements-->
<section class="section-sm bg-gray text-left">
    <div class="container text-center">
        <div class="row flow-offset-7">
            <div class="col-xs-12 col-sm-6 col-md-3">
                <span class="icon icon-primary icon-md fa-trophy"></span>
                <p class="h6 text-white text-ubold">The Best Agency 2015</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
                <span class="icon icon-primary icon-md fa-flag"></span>
                <p class="h6 text-white text-ubold">The Best Agents Award</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
                <span class="icon icon-primary icon-md fa-graduation-cap"></span>
                <p class="h6 text-white text-ubold">Certified by the International Association</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
                <span class="icon icon-primary icon-md fa-star"></span>
                <p class="h6 text-white text-ubold">The Five Star Award</p>
            </div>
        </div>
    </div>
</section>
<!--Section Our Team-->
<section class="section-md text-left">
    <div class="container text-center text-sm-left">
        <h2>Our Team</h2>
        <hr>
        <div class="row flow-offset-4">
            @foreach (Agent agent in Model.Agent)
            {
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="team-member">
                        <div class="media media-mod-3">
                            <div class="media-left img-width-auto">
                                <img src="~/assets/images/@agent.Photo" alt="" width="100" height="100">
                            </div>
                            <div class="media-body">
                                <h5 class="text-sushi"><a asp-controller="Agent" asp-action="Details" asp-route-Id="@agent.Id">@agent.FullName</a></h5>
                                <p>Listing Agent</p>
                                <dl class="dl-horizontal-mod-1 text-ubold text-abbey">
                                    <dt>tel.</dt>
                                    <dd>
                                        <a href="callto:#">@agent.PhoneNumber</a>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <p>@agent.Description</p>
                    </div>
                </div>

            }
        </div>
    </div>
</section>
